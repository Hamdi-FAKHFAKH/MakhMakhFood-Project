@page
@using System.Text.RegularExpressions
@model projet2.Pages.customer.IndexModel
@{
}
@foreach ( var c in Model.cat ) {
<div class="row container pb-2 mt-2 backgroundWhite">
	<h2 class="text-success pl-1"><b>@c.Name</b></h2>
	<div class="col-12">
	<div class="row my-3">
	@foreach( var i in Model.menuItems.Where(u=>u.categorieId == c.Id)){
	
		 
			<div class="col-lg-4 col-md-6 pb-2 pt-2 filter">
				<div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
					<div class="card-body pb-1 row">
						<div class="col-8 h5">@i.Name</div>
						<div class="col-4 text-end"><span class="text-info h4"> @i.Price $$ </span></div>
					</div>
							<img class="card-img-top img-fluid d-block mx-auto mb-3" style="height:250px " src="@i.Image" alt="menuitem image">
					<div class="card-body p-1 px-3 row">
						<div class="col-6">
							<span class="badge p-2 border w-100 text-dark bg-warning ">@i.categorie.Name</span>
						</div>
						<div class="col-6 border-0">
							<span class="badge p-2 border w-100 bg-info ">@i.food.Name</span>
						</div>
						<div class="col-12 pt-2" style="font-size:13px; text-align:justify">
							@*permet de suprimer les balise html *@
							<p> 
								@*@Regex.Replace(i.Description, "<[^>]*(>|$)", string.Empty)*@
								@*other methode *@
								@Html.Raw(i.Description)
							</p>
						</div>
						<div class="col-12 p-1">
							<a class="btn btn-dark form-control btn-sm p-2" asp-route-id="@i.Id" asp-page="Detail" style="height:40px">View Details</a>
						</div>
					</div>
				</div>
			</div>

		
	
	}</div></div>
</div>
}