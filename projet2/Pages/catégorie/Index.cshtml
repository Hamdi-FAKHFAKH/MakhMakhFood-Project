@page
@model projet2.Pages.catégorie.IndexModel
@{
}
<partial name="_Notification"/>
<div class="container p-4">
    <div class="row">
        <div class="col-6">
            <h1>Category List </h1>
        </div>
        <div class="col-6 text-end" >
            
            <a class="btn btn-primary" asp-page="Create"><i class="bi bi-plus-circle"></i> &nbsp; Create new Category </a>
        </div>
    </div>
</div>

<table class="table-bordered  table table-striped p-4 w-100">
    <thead>
        <tr>
            <th>
                id
            </th>
            <th>
                name
            </th>
            </th>
            <th>
                Dispaly Order
            </th>
            <th>
                date
            </th>
        </tr>
    </thead>
    <tbody>
         @foreach(var obj in Model.categories) // on accéde a les variable envoyer par le controlleur par le mot clé Model l
    {
        <tr>
            <td>
                @obj.Id
            </td>
            <td>
                @obj.Name
            </td>
            <td>
                @obj.Orderdisplay
            </td>
            <td>
                
                @obj.date
            </td>
            <td>
                <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary"> <i class="bi bi-pencil-square"></i> &nbsp; Edit</a>&nbsp;&nbsp;
                <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger"> <i class="bi bi-trash-fill"></i> &nbsp; Delete</a>
            </td>
                
        </tr>
    }
    </tbody>
</table>
